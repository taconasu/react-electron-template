{
  "name": "react-electron-template",
  "version": "0.0.9",
  "description": "Vite React Electron test application.",
  "author": "JunHotta",
  "scripts": {
    "vite": "vite",
    "start": "node --require esbuild-register lib/runtime.ts start",
    "dev": "node --require esbuild-register lib/runtime.ts dev",
    "build": "node --require esbuild-register lib/runtime.ts build",
    "serve": "vite preview",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint './**/*.ts{,x}'",
    "lint:tsc": "tsc --noEmit --skipLibCheck"
  },
  "build": {
    "appId": "com.xland.app",
    "productName": "react-electron-template",
    "directories": {
      "output": "dist",
      "app": "dist"
    },
    "extends": null,
    "mac": {
      "target": "dmg",
      "icon": "public/ninja-icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/ninja-icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "taconasu",
      "repo": "react-electron-template",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.6",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "arg": "^5.0.0",
    "chalk": "^2.4.2",
    "dotenv": "^9.0.2",
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "execa": "^5.1.1",
    "framer-motion": "^4.1.17",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.6.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7",
    "esbuild": "^0.12.19",
    "esbuild-register": "^2.6.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.27.0",
    "lint-staged": "^12.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
